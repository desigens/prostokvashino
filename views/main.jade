doctype html
html
	head
		meta(content="text/html; charset=utf-8")
		title Простоквашино
		link(rel='stylesheet', type="text/css", href='/styles/main.css')
	body
		div.image.hidden(data-src="/images/zakopanniy.png")
			if (bubbles)
				each b, i in bubbles
					div.text(id="text#{i}", style="top: #{b.y}; left: #{b.x}", draggable="true")
						span.center(contenteditable="true") !{b.text}
		div.b-link
			div.b-link__get Получить ссылку на картинку
			div.b-link__url
			img.b-link__image#test(data-src="/pic/", width="500")

		script(type="text/javascript", src="/scripts/jquery.js")
		script(type="text/javascript", src="/scripts/jquery-ui-1.10.3.custom.js")
		script(type="text/javascript", src="/scripts/main.js")